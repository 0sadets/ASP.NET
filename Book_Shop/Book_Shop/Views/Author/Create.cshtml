@model DataAccess.Entities.Author

<h1>Create new Author</h1>

<form asp-action="Create" method="post" class="row g-3">
    <div class="col-md-6">
        <label asp-for="FirstName" class="form-label">FirstName</label>
        <input asp-for="FirstName" type="text" class="form-control" placeholder="Enter FirstName">
        <span class="form-text text-danger" asp-validation-for="FirstName"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="LastName" class="form-label">LastName</label>
        <input asp-for="LastName" type="text" class="form-control" placeholder="Enter LastName">
        <span class="form-text text-danger" asp-validation-for="LastName"></span>
    </div>
    <div class="col-12">
        <label asp-for="Biography" class="form-label">Biography</label>
        <input asp-for="Biography" type="text" class="form-control" placeholder="Enter Biography">
        <span class="form-text text-danger" asp-validation-for="Biography"></span>
    </div>
    <div class="col-md-12">
        <label asp-for="ImagePath" class="form-label">Image Path</label>
        <input asp-for="ImagePath" type="text" class="form-control" placeholder="Enter Image Path">
        <span class="form-text text-danger" asp-validation-for="ImagePath"></span>
    </div>

    <div class="col-6">
        <button type="submit" class="btn btn-primary w-100">Create</button>
    </div>
    <div class="col-6">
        <a asp-action="Index" class="btn btn-primary w-100">Back</a>
    </div>
</form>
